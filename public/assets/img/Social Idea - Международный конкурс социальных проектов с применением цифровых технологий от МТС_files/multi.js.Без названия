window.onload = function() {
    var swiper = new Swiper('.swiper-container', {
        slidesPerView: 1,
        spaceBetween: 30,
        loop: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
}
const swp_mdl_opn_1 = () => {
    document.querySelector("#swiper_modal_open").classList.toggle('v-hidden');
    document.querySelector("#modal_open_speakers_1").classList.toggle('v-hidden');
}
